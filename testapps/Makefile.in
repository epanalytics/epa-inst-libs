CC          = @CC@
CXX         = @CXX@
FC          = @FC@
MPICC       = @MPICC@

BINDIR      = ../src

OBJS        = foo.o bar.o dum.o main.o
OBJSCPP	    = classes.o
EXTRA_INC   = -I../instcode
EXTRA_LIBS  = -lm

TARGETS  = cTest cppTest htcoef dynTest sgbench ioTest

all: $(TARGETS) 

%.o: %.c
	$(CC) -c -o $@ $< 

%.o: %.C
	$(CXX) -c -o $@ $< 

cTest: $(OBJS)
	$(CC) -o $@ $(OBJS)

cppTest: $(OBJSCPP)
	$(CXX) -o $@ $(OBJSCPP)

htcoef:
	$(FC) -o $@ htcoef.f

dynTest:
	$(CC) -o $@ dynTest.c

sgbench:
	$(CC) -o $@ sgbench.c $(EXTRA_INC) $(EXTRA_LIBS)

ioTest:
	$(MPICC) -o $@ ioTest.c @MPI_FLAGS@

clean: 
	rm -f *.o $(TARGETS) 

