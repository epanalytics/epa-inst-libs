CC          = @CC@
CXX         = @CXX@
FC          = @FC@
MPICC       = @MPICC@

BINDIR      = ../src

OBJS        = foo.o bar.o dum.o main.o
OBJSCPP	    = classes.o
EXTRA_INC   = -I../instcode
EXTRA_LIBS  = -lm

TARGETS  = cTest cppTest fTest dynTest sgTest
IDETGT = $(subst Test,Test.ideinst,$(TARGETS))
JBBTGT = $(subst Test,Test.jbbinst,$(TARGETS))
SIMTGT = $(subst Test,Test.siminst,$(TARGETS))

all: $(TARGETS) 
	echo $(IDETGT)
%.o: %.c
	$(CC) -g -c -o $@ $< 

%.o: %.C
	$(CXX) -g -c -o $@ $< 

cTest: $(OBJS)
	$(CC) -g -o $@ $(OBJS)

cppTest: $(OBJSCPP)
	$(CXX) -g -o $@ $(OBJSCPP)

fTest:
	$(FC) -g -o $@ fTest.f

dynTest:
	$(CC) -g -o $@ dynTest.c

sgTest:
	$(CC) -g -o $@ sgTest.c $(EXTRA_INC) $(EXTRA_LIBS)

showme:
	which pebil
	ldd `which pebil`

check: showme $(IDETGT) $(JBBTGT) $(SIMTGT)
PEBIL_COMMAND = pebil --silent --typ
FILTER_PEBIL_MSGS = grep -v "\-\["
OUT = outp
DIFF = diff
NULL_FILE = /dev/null

%.ideinst: %
	$(PEBIL_COMMAND) ide --app $<
	$(DIFF) $< $@
	./$@ > $@.$(OUT)
	./$< > $<.$(OUT)
	$(DIFF) $<.$(OUT) $@.$(OUT)

%.jbbinst: %
	$(PEBIL_COMMAND) jbb --app $<
	./$@ | $(FILTER_PEBIL_MSGS) > $@.$(OUT)
	./$< > $<.$(OUT)
	$(DIFF) $<.$(OUT) $@.$(OUT)

%.siminst: %
	$(PEBIL_COMMAND) sim --app $< --inp $(NULL_FILE)
	./$@ | $(FILTER_PEBIL_MSGS) > $@.$(OUT)
	./$< > $<.$(OUT)
	$(DIFF) $<.$(OUT) $@.$(OUT)

clean: 
	rm -f *.o $(TARGETS) *.jbbinst *.loopcnt *.siminst *.ideinst *.static *.$(OUT)
