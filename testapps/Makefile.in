CC          = @CC@
CXX         = @CXX@
FC          = @FC@
MPICC       = @MPICC@

BINDIR      = ../src

OBJS        = foo.o bar.o dum.o main.o
OBJSCPP	    = classes.o
EXTRA_INC   = -I../instcode
EXTRA_LIBS  = -lm

TARGETS  = cTest cppTest fTest dynTest sgTest
IDETGT = $(subst Test,Test.ideinst,$(TARGETS))
JBBTGT = $(subst Test,Test.jbbinst,$(TARGETS))
SIMTGT = $(subst Test,Test.siminst,$(TARGETS))

all: $(TARGETS) 
	echo $(IDETGT)
%.o: %.c
	$(CC) -g -c -o $@ $< 

%.o: %.C
	$(CXX) -g -c -o $@ $< 

cTest: $(OBJS)
	$(CC) -g -o $@ $(OBJS)

cppTest: $(OBJSCPP)
	$(CXX) -g -o $@ $(OBJSCPP)

fTest:
	$(FC) -g -o $@ fTest.f

dynTest:
	$(CC) -g -o $@ dynTest.c

sgTest:
	$(CC) -g -o $@ sgTest.c $(EXTRA_INC) $(EXTRA_LIBS)

showme:
	which pebil
	ldd `which pebil`

check: showme $(IDETGT) $(JBBTGT) $(SIMTGT)
%.ideinst: %
	pebil --typ ide --app $<
	diff $< $@
	./$@
	./$<

%.jbbinst: %
	pebil --typ jbb --app $< --dtl
	./$@
	./$<

%.siminst: %
	pebil --typ sim --app $< --inp /dev/null --dtl
	./$@
	./$<

clean: 
	rm -f *.o $(TARGETS) *.jbbinst *.loopcnt *.siminst *.ideinst *.static
